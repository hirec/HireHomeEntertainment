<Window x:Class="HireHomeEntertainment.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:HireHomeEntertainment.View"
        Title="MainWindow" WindowStyle="None" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" WindowState="Maximized" KeyDown="MainWindow_KeyDown">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1"  StartPoint="0.5,0">
            <GradientStop Color="#0a0117"/>
            <GradientStop Color="#FF2E113E" Offset="2"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Frame Name="NavigationFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Navigated="NavigationFrame_Navigated" />
    </Grid>
</Window>
